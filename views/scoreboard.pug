html
    head
        title Score Board
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet")

    body(class='p-3')
        nav(class="navbar navbar-expand-lg bg-light") 
            div(class="container-fluid") 
                a(class="navbar-brand" href="/") CricHub
                ul(class="navbar-nav me-auto mb-2 mb-lg-0") 
                    li(class="nav-item") 
                    a(class="nav-link active" href="/home") Home
                    li(class="nav-item") 
                    a(class="nav-link" href="/scoreboard") Scoreboard
                    li(class="nav-item") 
                    a(class="nav-link" href="/series") Series
                    li(class="nav-item") 
                    a(class="nav-link" href="/teams") Teams
                form(class="d-flex" role="search" action="player") 
                    input(class="form-control me-2" type="search" name="name" placeholder="Search Player" aria-label="Search") 
                    button(class="btn btn-outline-success" type="submit") Search

        div(class='m-5')
            h1(class='text-center m-2' style='font-variant:small-caps') Current Matches Scoreboard
            each match, i in matches
                div(class="list-group")
                    a(class="list-group-item list-group-item-action")
                        div(class="d-flex w-100 justify-content-between")
                            h5(class="mb-1 text-primary") #{i+1}. #{match.name}
                            small 
                                b #{match.date}
                        p(class="mb-1") #{match.venue}
                            br 
                            span(style='text-transform:uppercase') #{match.matchType}
                        h5(class='text-center m-2') #{match.status}
                        div(class="d-flex justify-content-center")
                                each inn in match.score
                                    div(class="text-center border rounded ps-5 pe-5")
                                        h6 #{inn.inning}
                                        p #{inn.r}/#{inn.w} (#{inn.o})